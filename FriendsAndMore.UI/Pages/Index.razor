@page "/"

@inherits IndexBase

@if (AppState.Contacts == null)
{
    <div class="column">
        <div class="box">
            <h1 class="title">Loading contacts...</h1>
            <progress class="progress is-large is-info" max="100">60%</progress>
        </div>
    </div>
}
else
{
    foreach (var contact in AppState.Contacts)
    {
        <ContactTeaser Contact="@contact" />
    }
}